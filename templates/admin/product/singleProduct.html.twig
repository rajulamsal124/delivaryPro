					<img class="img-fluid my-5 ms-4" src="{{asset('/images/no_image.png')}}"></img>
			{% else %}
				<img class="img-fluid my-5 ms-4" src="{{asset(product.imagePath)}}"></img>
		{% endif %}

	</div>

	<div class="col col-md-6 ">

		<div class="table-responsive">
			<table class="table table-borderless align-middle shadow-sm font-weight-bold">

				<tr>
					<td>
