					</td>
					<td>{{product.name}}
					</td>
				</tr>
				<tr>
					<td>
						Description
					</td>
					<td>{{product.description}}
					</td>
				</tr>
				<tr>
					<td>
						Price
					</td>
					<td>AUD
						{{product.price}}
					</td>
				</tr>
				<tr>
					<td>
						Stock
					</td>
					<td>{{product.stock}}</td>
				</tr>
				<tr>
					<td>
						Category
					</td>
					<td>{{product.category.name}}</td>
				</tr>
			</p>
		</td>
